// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "vim_mode": false,
  "base_keymap": "SublimeText",
  "auto_update_extensions": {
    "catppuccin": false
  },
  "autosave": "on_focus_change",
  "auto_install_extensions": {
    "aylin-theme": true,
    "html": true,
    "dockerfile": true,
    "docker-compose": true,
    "emmet": true,
    "php": true,
    "sql": true,
    "xml": true,
    "make": true,
    "powershell": true,
    "golangci-lint": true
  },
  "restore_on_startup": "last_session",
  "ui_font_size": 16,
  "ui_font_family": "CaskaydiaCove Nerd Font",
  // "buffer_font_family": "Fantasque Sans Mono",
  "buffer_font_family": "CaskaydiaMono Nerd Font Propo",
  "buffer_font_weight": 100,
  "buffer_line_height": "standard",
  "buffer_font_size": 16,
  "buffer_font_features": {
    "cv01": 7,
    "calt": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "indent_guides": {
    "enabled": true,
    "line_width": 1,
    "active_line_width": 3,
    "coloring": "fixed",
    "background_color": "#000000",
    "background_coloring": "disabled"
  },
  "inlay_hints": {
    "enabled": false,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "terminal": {
    "alternate_scroll": "on",
    "blinking": "on",
    "dock": "bottom",
    "line_height": "standard",
    "shell": {
      "program": "C:/Program Files/PowerShell/7/pwsh.exe"
    },
    "scrollbar": {
      "show": "always"
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "theme": {
    "mode": "dark",
    // "light": "Catppuccin Macchiato - No Italics",
    // "dark": "Blackula" // "Catppuccin Mocha - No Italics"
    "dark": "Aylin Selene",
    "light": "Aylin Selene"
  },
  "experimental.theme_overrides": {
    "background.appearance": "blurred",
    "syntax": {
      "comment": {
        "font_style": "normal"
      }
    }
  },
  "languages": {
    "PHP": {
      "language_servers": ["intelephense", "!phpactor"]
    }
    // "JavaScript": {
    //   "tab_size": 2,
    //   "formatter": {
    //     "external": {
    //       "command": "prettier",
    //       "arguments": ["--stdin-filepath", "{buffer_path}"]
    //     }
    //   }
    // }
  },
  "lsp": {
    "intelephense": {
      "max_memory": "4096M",
      "initialization_options": {
        "enable": true,
        "completion": {
          "snippetSupport": true
        },
        "format": {
          "enable": true
        },
        "codeAction": {
          "enable": true
        },
        "diagnostics": {
          "enable": true,
          "undefinedProperties": true
        }
      }
    }
  }
}
